             x:Class="App3.view.AddReport">
    <ContentPage.Content>
    <StackLayout Padding="30"
             VerticalOptions="Start">
            <Label Text="Welcome to Tracking cars application !"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Name Report"
          HorizontalOptions="Center"/>
            <Entry Text=""
          x:Name="name_rapport"/>
            <Label Text="Comentary Problem"
          HorizontalOptions="Center"/>
            <Entry Text=""
          x:Name="commentary_problem"/>
             
            <Button Text="save"
        TextColor="White"
